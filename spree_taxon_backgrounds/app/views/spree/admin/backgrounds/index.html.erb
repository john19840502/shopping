<% content_for :page_title do %>
    <%= Spree.t(:backgrounds) %>
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new_background), new_admin_background_url, :class => "btn-success", :icon => 'add', :id => 'admin_new_background_link' %>
<% end %>

<table class="table" id="listing_backgrounds" data-hook>
  <thead>
  <tr data-hook="admin_backgrounds_index_headers">
    <th>
      <%= Spree.t('thumb') %>
    </th>
    <th>
      <%= Spree.t('taxon') %>
    </th>
    <th data-hook="admin_backgrounds_index_header_actions" class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @backgrounds.each do |background|%>
      <tr id="<%= spree_dom_id background %>" data-hook="admin_backgrounds_index_rows">
        <td class='background_thumb'><%= image_tag background.image(:thumb) %></td>
        <td class='background_taxon'>
          <% if background.taxon %>
              <%= background.taxon.name %>
          <% end %>
        </td>
        <td data-hook="admin_backgrounds_index_row_actions" class="actions actions-2 text-right">
          <%= link_to_edit background, :no_text => true %>
          <%= link_to_delete background, :no_text => true %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @backgrounds %>