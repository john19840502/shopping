<%= render :partial => 'spree/admin/impressions/sidemenu', :locals => {:current => 'Images'} %>

<% content_for :page_title do %>
    / <%= Spree.t(:images) %>
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new_image), new_admin_impression_image_url(@impression), :id => 'new_image_link', :class => "btn-success", :icon => 'add' %>
<% end %>

<table class="table index sortable" data-hook="images_table" data-sortable-link="<%= update_positions_admin_impression_images_url(@impression) %>">
  <thead>
  <tr data-hook="images_header">
    <th><%= Spree.t(:thumb) %></th>
    <th><%= Spree.t(:alt_text) %></th>
    <th data-hook="admin_impression_images_header_actions" class="actions text-right"><%= Spree.t(:action) %></th>
  </tr>
  </thead>
  <tbody>
  <% @impression.images.each do |image| %>
      <tr id="<%= spree_dom_id image %>" data-hook="images_row">
        <td>
          <span class="handle"></span>
          <%= link_to image_tag(image.attachment.url(:mini)), image.attachment.url(:product) %>
        </td>
        <td><%= image.alt %></td>
        <td class="actions text-right">
          <%= link_to_with_icon 'crop', t(:crop), crop_admin_impression_image_url(@impression, image) %>
          <%= link_to_with_icon 'edit', t(:edit), edit_admin_impression_image_url(@impression, image), :class => 'edit' %>
          &nbsp;
          <%= link_to_delete image, { :url => admin_impression_image_url(@impression, image) }%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div id="images" data-hook></div>




