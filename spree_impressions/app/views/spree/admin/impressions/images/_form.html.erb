<div data-hook="admin_inside_background_form">
  <%= f.field_container :attachment, class: ['form-group'] do %>
      <%= f.label :attachment, Spree.t(:filename) %>
      <%= f.file_field :attachment %>
      <%= f.error_message_on :attachment %>
  <% end %>

  <%= f.field_container :alt, class: ['form-group'] do %>
      <%= f.label :alt, Spree.t(:alt_text) %>
      <%= f.text_area :alt, class: 'form-control' %>
      <%= f.error_message_on :alt %>
  <% end %>
</div>
