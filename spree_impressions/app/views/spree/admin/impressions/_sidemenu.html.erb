<% content_for :page_title do %>
    <%= link_to Spree.t(:impressions), admin_impressions_path %> /
    <%= @impression.title %>
<% end %>

<% content_for :sidebar do %>
    <ul class="nav nav-pills nav-stacked" data-hook="admin_impressions_tabs">
      <%= content_tag :li, :class => ('active' if current == 'Impression Details') do %>
          <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_impression_url(@impression) %>
      <% end if can?(:admin, Spree::Impression) %>
      <%= content_tag :li, :class => ('active' if current == 'Images') do %>
          <%= link_to_with_icon 'picture', "#{Spree.t(:images)} (#{@impression.images.count})", admin_impression_images_url(@impression) %>
      <% end if can?(:admin, Spree::Impression) %>
    </ul>
<% end %>