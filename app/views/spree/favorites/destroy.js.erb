<% if @success %>
    if($("#favorable_<%= @favorable_type.demodulize.underscore %>_<%= @favorable_id %>").length) {
        $("#favorable_<%= @favorable_type.demodulize.underscore %>_<%= @favorable_id %>").attr('href', '<%= raw favorites_path(favorable_id: @favorite.favorable_id, favorable_type: @favorite.favorable_type) %>').data('method', 'post').html('<%= raw("#{Spree.t(:add_favorite)}<span class=\"glyphicon glyphicon-heart\" aria-hidden=\"true\"></span>") %>')
    } else {
        $("#favorite_<%= @favorite.id %>").remove();
    }
<% end %>
update_favorites(<%= favorite_count %>, false);
